<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="412.0" prefWidth="485.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <children>
      <RadioButton fx:id="PrincessCake" layoutX="94.0" layoutY="104.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="128.0" text="Princess-Cake">
         <font>
            <Font size="14.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="cake" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="ChoclateCake" layoutX="94.0" layoutY="139.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="166.0" text="Choclate Cake" toggleGroup="$cake">
         <font>
            <Font size="14.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="ShrovetideBun" layoutX="94.0" layoutY="174.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="148.0" text="Shrovetide Bun" toggleGroup="$cake">
         <font>
            <Font size="14.0" />
         </font>
      </RadioButton>
      <Button fx:id="orderBtn" alignment="CENTER" layoutX="-1.0" layoutY="245.0" mnemonicParsing="false" onAction="#orderNow" prefHeight="30.0" prefWidth="486.0" text="Order">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextField fx:id="customerField" layoutX="148.0" layoutY="62.0" promptText="Customer" />
      <Label fx:id="orderLable" alignment="CENTER" layoutX="-3.0" layoutY="318.0" prefHeight="20.0" prefWidth="486.0" text="Update">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
